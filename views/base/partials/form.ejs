<form id="mForm" method="post" action="/base/index.ejs">
    <label for="firstname">Naam</label>
    <input type="text" placeholder="John Doe" id="firstname" name="firstname" required>

    <label for="city">Stad</label>
    <input type="text" placeholder="Amsterdam" id="city" name="city" required>

    <label for="age">Leeftijd</label>
    <input type="number" placeholder="20" id="age" name="age" required>


    <label for="message">Beschrijving</label>
    
    <textarea id="message" placeholder="Vertel iets over jezelf" name="message"></textarea>

    <input id="submit" type="submit"  value="Aanmelden">
</form>